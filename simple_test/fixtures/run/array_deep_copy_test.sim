PROGRAM x;
TYPE a = ARRAY 2 OF INTEGER;
TYPE b = ARRAY 2 OF a;
TYPE c = ARRAY 2 OF b;

VAR x: a;
VAR y: a;

VAR z: b;
VAR q: b;

VAR m: c;
VAR n: c;
BEGIN
  x[1] := 1;
  WRITE y[1];
  y := x;
  WRITE y[1];
  x[1] := 2;
  WRITE y[1];

  z[1] := x;
  WRITE z[1][1];
  x[1] := 3;
  WRITE z[1][1];

  z[1][1] := 3;
  q := z;
  WRITE q[1][1];
  z[1][1] := 4;
  WRITE q[1][1];

  z[1][1] := 4;
  WRITE z[1][1];
  m[1] := z;
  WRITE m[1][1][1];
  n := m;
  WRITE n[1][1][1];
  m[1][1][1] := 2;
  WRITE n[1][1][1]

END x.

