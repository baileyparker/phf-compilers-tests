PROGRAM x;
TYPE r1 = RECORD x: INTEGER; y: INTEGER; END;
TYPE a2 = ARRAY 2 OF r1;
TYPE r3 = RECORD x: a2; y: a2; END;

VAR x: r3;
BEGIN
    WRITE x.x[0].x;
    WRITE x.x[0].y;
    WRITE x.x[1].x;
    WRITE x.x[1].y;
    WRITE x.y[0].x;
    WRITE x.y[0].y;
    WRITE x.y[1].x;
    WRITE x.y[1].y;

    x.x[0].y := 1;
    x.y[1].x := 1;

    WRITE x.x[0].x;
    WRITE x.x[0].y;
    WRITE x.x[1].x;
    WRITE x.x[1].y;
    WRITE x.y[0].x;
    WRITE x.y[0].y;
    WRITE x.y[1].x;
    WRITE x.y[1].y
END x.

